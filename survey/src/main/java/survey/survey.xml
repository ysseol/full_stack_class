<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="survey">
	<select id="view" resultType="survey.SurveyDTO">
		select * from survey where survey_idx=#{survey_idx}
	</select>
	
	<insert id="insert">
		insert into answer values ((select nvl(max(answer)+1,1) from answer), #{survey_idx},#{num})
	</insert>
	
	<select id="summary" resultType="survey.SummaryDTO">
		select * from survey_v
		where survey_idx=#{survey_idx}
	</select>
</mapper>